@model Kanban.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Iniciar sesión";
}

<form asp-controller="Login" asp-action="Login" method="post" class="mt-3 col-sm-7 col-md-6 col-lg-4">
    <fieldset>
        <legend class="text-center">Iniciar sesión</legend>
    <div class="mb-3"> 
        <label asp-for="@Model.NombreDeUsuario"></label>
        <input asp-for="@Model.NombreDeUsuario" class="form-control" required />
        <span asp-validation-for="@Model.NombreDeUsuario" class="text-danger"></span>
    </div>

    <div class="mb-3"> 
        <label asp-for="@Model.Password"></label>
        <input asp-for="@Model.Password" class="form-control" />
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
    </div>
    </fieldset>

    <!-- Mostrar mensaje de error si existe -->
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorMessage
        </div>
    }

    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary boton-submit">Ingresar</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}