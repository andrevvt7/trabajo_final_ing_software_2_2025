@{
    ViewData["Title"] = "Modificar tablero";
}
@model Kanban.ViewModels.ModificarTableroViewModel

<form asp-controller="Tablero" asp-action="ModificarTablero" method="post" class="mt-3 col-sm-7 col-md-6 col-lg-4">
    <input type="hidden" asp-for="@Model.Id">
    
     <fieldset>
        <legend class="text-center">Modificar tablero</legend>
    <div class="mb-3">
        <label asp-for="@Model.Nombre">Nombre</label>
        <input asp-for="@Model.Nombre" class="form-control" />
        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>    
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Descripcion">Descripci√≥n</label>
        <input asp-for="@Model.Descripcion" class="form-control" />
    </div>
    </fieldset>

    <div class="d-flex justify-content-center">
        <button type="submit" class="btn boton-modificar">Modificar</button>
    </div>
</form>
@section Scripts{<partial name="_ValidationScriptsPartial"/>}
