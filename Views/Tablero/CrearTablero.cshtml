@{
    ViewData["Title"] = "Crear tablero";
}
@model Kanban.ViewModels.CrearTableroViewModel

<form asp-controller="Tablero" asp-action="CrearTablero" method="post" class="mt-3 col-sm-7 col-md-6 col-lg-4">
    <fieldset>
        <legend class="text-center">Crear tablero</legend>
    <div class="mb-3">
        <label asp-for="@Model.Nombre"></label>
        <input asp-for="@Model.Nombre" class="form-control" />
        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Descripcion"></label>
        <input asp-for="@Model.Descripcion" class="form-control" />
    </div>
    </fieldset>

    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary boton-submit">Crear</button>
    </div>
</form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}