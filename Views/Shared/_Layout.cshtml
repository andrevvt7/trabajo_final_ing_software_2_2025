@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    var isAuthenticated = false;
    var usuarioLogueado = string.Empty;
    var rolUsuarioLogueado = string.Empty;

    if (HttpContextAccessor.HttpContext.Session.GetString("IsAuthenticated") == "true")
    {
        isAuthenticated = true;
        usuarioLogueado = HttpContextAccessor.HttpContext.Session.GetString("NombreDeUsuarioLogueado");
        rolUsuarioLogueado = HttpContextAccessor.HttpContext.Session.GetString("RolUsuarioLogueado");
    }
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kanban</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/tl2_proyecto_2024_andrevvt7.styles.css" asp-append-version="true" />
</head>

<body>
    <header>

        <nav class="navbar navbar-expand-lg mi-navbar">
            <div class="container-fluid">
                @if (isAuthenticated)
                {
                    <a class="navbar-brand text-dark" asp-area="" asp-controller="Tablero" asp-action="ListarTableros">Kanban</a>
                    
                } else {
                    <a class="navbar-brand text-dark" asp-area="" asp-controller="Login" asp-action="Index">Kanban</a>
                }

                <!-- botoncito de menú desplegable  -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="27" height="27"><path d="M3.75 5.25a.75.75 0 0 0 0 1.5h16.5a.75.75 0 0 0 0-1.5H3.75Zm0 6a.75.75 0 0 0 0 1.5h16.5a.75.75 0 0 0 0-1.5H3.75Zm0 6a.75.75 0 0 0 0 1.5h16.5a.75.75 0 0 0 0-1.5H3.75Z"></path></svg></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">


                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">

                        @if (isAuthenticated)
                        {
                            if (@rolUsuarioLogueado == "Administrador")
                            {

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Usuario"
                                        asp-action="ListarUsuarios">Listar usuarios</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Tablero"
                                    asp-action="ListarTableros">Listar tableros</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" href="@Url.Action("Logout", "Login")">Cerrar sesión</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="@Url.Action("Index", "Login")">Iniciar sesión</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container content">
        <main role="main" class="pb-3 row justify-content-center">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container"> &copy; 2025 - tl2_proyecto_2024_andrevvt7
            @if (isAuthenticated){
                <h5 class="d-flex align-items-center text-decoration-underline"><svg class="me-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="21" height="21"><path d="M12 2.5a5.5 5.5 0 0 1 3.096 10.047 9.005 9.005 0 0 1 5.9 8.181.75.75 0 1 1-1.499.044 7.5 7.5 0 0 0-14.993 0 .75.75 0 0 1-1.5-.045 9.005 9.005 0 0 1 5.9-8.18A5.5 5.5 0 0 1 12 2.5ZM8 8a4 4 0 1 0 8 0 4 4 0 0 0-8 0Z"></path></svg> Bienvenido @usuarioLogueado</h5>
            }
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
   
</body>

</html>
