@{
  ViewData["Title"] = "Crear usuario";
}
@model Kanban.ViewModels.CrearUsuarioViewModel

<form asp-controller="Usuario" asp-action="CrearUsuario" method="post" class="mt-3 col-sm-7 col-md-6 col-lg-4">
  <fieldset>
    <legend class="text-center">Crear usuario</legend>
    <div class="mb-3">
      <label asp-for="@Model.NombreDeUsuario"></label>
      <input asp-for="@Model.NombreDeUsuario" class="form-control" required />
      <span asp-validation-for="@Model.NombreDeUsuario" class="text-danger"></span>
    </div>
    <div class="mb-3">
      <label asp-for="@Model.Password"></label>
      <input asp-for="@Model.Password" class="form-control" required />
    </div>
    <div class="mb-3">
      <label asp-for="@Model.RolUsuario"></label>
      <select asp-for="@Model.RolUsuario" class="form-control"
        asp-items="Html.GetEnumSelectList<RolUsuario>()"></select>
    </div>
  </fieldset>

  <div class="d-flex justify-content-center">
    <button type="submit" class="btn btn-primary boton-submit">Crear</button>
  </div>
</form>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}