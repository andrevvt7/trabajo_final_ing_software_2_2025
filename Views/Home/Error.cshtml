@{
    ViewData["Title"] = "Error";
}
<div id="pagina-error">

    <div class="container position-relative d-flex justify-content-center align-items-center"
        style="height: 100vh; width: 100%;">
        <div>
            <h1 class="text-center text-light">ERROR 403</h1>
            <p class="text-light">No tiene autorización para acceder.</p>
        </div>
        <div class="row" style="width: 100%;">
            <div class="col-12 col-md-8 start-50 position-absolute translate-middle">
                <video class="w-100" muted autoplay loop>
                    <source src="~/img/error.mp4" type="video/mp4">
                </video>
            </div>
        </div>
    </div>

</div>